<a id="scrollToTopBtn" title="Kembali ke atas"><i class="fas fa-arrow-up"></i></a>

<script>
document.addEventListener('DOMContentLoaded', function() {
    
    // --- Logika untuk Tombol Scroll to Top ---
    const scrollToTopBtn = document.getElementById("scrollToTopBtn");
    if (scrollToTopBtn) {
        let lastScrollTop = 0;
        window.addEventListener("scroll", function() {
            let scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            if (scrollTop < lastScrollTop && scrollTop > 300) {
                scrollToTopBtn.classList.add('show');
            } else {
                scrollToTopBtn.classList.remove('show');
            }
            lastScrollTop = scrollTop <= 0 ? 0 : scrollTop; 
        }, false);

        scrollToTopBtn.addEventListener("click", function(e) {
            e.preventDefault();
            window.scrollTo({ top: 0, behavior: "smooth" });
        });
    }

    // --- Logika untuk Tombol Clear Search ---
    const searchInput = document.getElementById('searchInput');
    const clearBtn = document.getElementById('clearSearchBtn');
    const searchBtn = document.getElementById('searchSubmitBtn');

    if (searchInput && clearBtn && searchBtn) {
        // Fungsi untuk mengecek isi input dan mengganti tombol
        function updateSearchButtons() {
            if (searchInput.value.length > 0) {
                searchBtn.style.display = 'none';
                clearBtn.style.display = 'block';
            } else {
                searchBtn.style.display = 'block';
                clearBtn.style.display = 'none';
            }
        }

        // Jalankan saat halaman pertama kali dimuat
        updateSearchButtons();

        // Tambahkan event listener saat user mengetik
        searchInput.addEventListener('input', updateSearchButtons);

        // Tambahkan event listener saat tombol X diklik
        clearBtn.addEventListener('click', function() {
            searchInput.value = '';
            searchInput.focus();
            updateSearchButtons(); // Panggil fungsi untuk menukar tombol kembali
        });
    }

});
</script>

