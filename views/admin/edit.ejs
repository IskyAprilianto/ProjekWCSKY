<%- include('../partials/admin-header') %>

<div class="admin-wrapper">
    <%- include('../partials/admin-sidebar') %>

    <div class="admin-main-content">
        <div class="dashboard">
            <h2>Edit Artikel</h2>
            
            <form action="/admin/edit/<%= article._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                
                <input type="hidden" name="oldImageUrl" value="<%= article.imageUrl %>">

                <div class="form-group">
                    <label>Judul Artikel</label>
                    <input type="text" name="title" value="<%= article.title %>" required>
                </div>

                <div class="form-group">
                    <label>Kategori</label>
                    <select name="category" required>
                        <% categories.forEach(function(cat) { %>
                            <option value="<%= cat.name %>" <%= article.category === cat.name ? 'selected' : '' %>>
                                <%= cat.name %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label>Konten</label>
                    <textarea name="content" rows="10" required><%= article.content %></textarea>
                </div>

                <div class="form-group">
                    <label>Gambar Saat Ini</label>
                    <img src="<%= article.imageUrl %>" alt="Gambar saat ini" width="200" style="margin-top: 10px; border-radius: 5px;">
                </div>

                <div class="form-group">
                    <label>Ganti Gambar (Opsional)</label>
                    <input type="file" name="image" accept="image/*">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn">Update Artikel</button>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include('../partials/admin-footer') %>